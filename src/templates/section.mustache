<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{#category}}{{name}}{{/category}} &gt; {{#section}}{{name}}{{/section}} &ndash; {{app_name}}</title>
    <link rel="stylesheet" href="../css/styles.css">
    {{! For development purposes }}
    {{! <link rel="stylesheet/less" href="../css/styles.less" /> }}
  </head>
  <body>

    <nav>
      <div class="app">
        <a class="icon" href="../index.html">
          {{#icon_exists}}
            <img src="../../mockups/icon.png" alt="">
          {{/icon_exists}}
          {{^icon_exists}}
            <img src="../img/icon.png" alt="">
          {{/icon_exists}}
        </a>
        <span>
          {{app_name}}
        </span>
      </div>

      <div class="tapmates">
        <p>Tapmates</p>
        <p>All rights reserved. Copyright 2014 by Tapmates</p>
        <img src="../img/logo.png" alt="">
      </div>
    </nav>

    <aside>
      <ul id="js-categories-menu" class="categories-menu">
      {{#categories}}
        <li class="{{file}}">
          <a href="../{{file}}/index.html">{{name}}</a>
        </li>
      {{/categories}}
      </ul>
      <ul id="js-sections-menu" class="sections-menu">
      {{#sections}}
        <li class="{{class}}">
          <a href="{{file}}">{{name}}</a>
        </li>
      {{/sections}}
      </ul>
    </aside>

    <section>
      <h1>
      <ul class="images-list">
      {{#images}}
        <li class="image-item">
          <a href="../../{{category}}/{{file_url}}">
            <img src="../thumbs/{{category}}/{{file_url}}" alt="">
          </a>
          <p>{{number}}</p>
        </li>
      {{/images}}
      </ul>
    </section>

    <script src="../js/mockups.js"></script>
    <script>
      markItemAsSelected('js-categories-menu', '{{#category}}{{file}}{{/category}}');
      markItemAsSelected('js-sections-menu',   '{{#section}}{{class}}{{/section}}');
    </script>

    {{! For development purposes }}
    {{! <script src="../js/less.min.js"></script> }}
  </body>
</html>
