    {{! <link rel="stylesheet/less" href="css/styles.less" /> }}
  </head>
  <body>

    <nav>
      <div class="app">
        <a class="icon" href="index.html">
          {{#icon_exists}}
            <img src="../mockups/icon.png" alt="">
          {{/icon_exists}}
          {{^icon_exists}}
            <img src="img/icon.png" alt="">
          {{/icon_exists}}
